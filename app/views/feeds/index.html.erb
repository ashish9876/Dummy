



<div class="container page-content ">
  <div class="row">
    <!-- left links -->
    <%= render "side_bar_links" %>
    <!-- end left links -->
    <!-- center posts -->
    <div class="col-md-6">
      <div class="row">
        <!-- left posts-->
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <!-- post state form -->
              <%= render "new_feed" if current_user.present? %>
              <!-- end post state form -->
              <!--   posts -->
              <%= render partial: "feed", collection: @feeds, as: :feed %>
              <!--  end posts-->
            </div>
          </div>
        </div>
        <!-- end left posts-->
      </div>
    </div>
    <!-- end  center posts -->
    <!-- right posts -->
    <div class="col-md-3">
      <!-- Friends activity -->
      <div class="widget">
        <div class="widget-header">
          <h3 class="widget-caption">Friends List</h3>
        </div>
        <div class="widget-body bordered-top bordered-sky">
          <div class="card">
            <div class="content">
              <ul class="list-unstyled team-members">
                <%= render partial: "friend", collection: @friends, as: :friend %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- End Friends activity -->
      <!-- People You May Know -->
      <div class="widget">
        <div class="widget-header">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control friend-search-input" %>
            <span class="input-group-addon">
              <i class="fa fa-search"></i>
            </span>
          </div>
        </div>
        <div class="widget-body bordered-top bordered-sky">
          <div class="card">
            <div class="content">
              <ul class="list-unstyled team-members">
                <div class="search-friends-list">
                  Record Not found.
                </div>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- End people yout may know --> 
    </div>
    <!-- end right posts -->
  </div>
</div>

