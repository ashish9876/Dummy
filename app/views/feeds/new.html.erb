<%= form_for @feed do |f|%>
  <% if @feed.errors.any? %>
<div id="error_explanation">
    <h2>
      <%= pluralize(@feed.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
     <% @feed.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
    <% end %>
   </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :Text %><br />
  <%= f.text_field :text, autofocus: true %>
</div>

<div class="field">
  <%= f.label :Image %><br>
  <%= f.file_field :image %>
</div>

<div class="form-group">
  <label >Permission:</label>
  <%= f.select :permission, Feed.permissions.keys , autocomplete: "off" , placeholder: 'Permission',class: 'form-control'%>
</div>

<div class="field">
  <%= f.label :desc %><br>
  <%= f.text_field :desc %>
</div>

<div class="actions">
  <%= f.submit "save"  %>
</div>
<% end %>

